<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pooltable_empty"
    tools:context="csc483.scoremaster.GroupStatsScreen">

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:text="@string/GroupStats_groupname"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/groupStatScrollView"
        android:layout_alignStart="@+id/groupStatScrollView"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="234dp"
        android:text="Group Name:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:id="@+id/groupStatScrollView"
        android:layout_width="550dp"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/alert_light_frame"
        android:fadingEdge="horizontal|vertical"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal|vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="69dp">

        <HorizontalScrollView
            android:id="@+id/groupStatHorizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="horizontal|vertical">

            <TableLayout
                android:id="@+id/groupStatTable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:isScrollContainer="true"
                android:padding="10dp"
                >

                <TableRow
                    android:id="@+id/headerTableRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="120dp"
                        android:layout_height="55dp"
                        android:background="?attr/colorButtonNormal"
                        android:backgroundTintMode="screen"
                        android:text="Player Name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:background="?attr/colorButtonNormal"
                        android:backgroundTintMode="screen"
                        android:text="Average Innings"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:background="?attr/colorButtonNormal"
                        android:text="Matches Won"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:background="?attr/colorButtonNormal"
                        android:backgroundTintMode="screen"
                        android:text="Matches Played"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:background="?attr/colorButtonNormal"
                        android:text="Match Winrate"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:background="?attr/colorButtonNormal"
                        android:text="Breaks"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:background="?attr/colorButtonNormal"
                        android:text="Runs"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:background="?attr/colorButtonNormal"
                        android:text="8 Out of Turns"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:background="?attr/colorButtonNormal"
                        android:text="Scratch on 8's"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
